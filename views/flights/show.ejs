<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <section id="show-page">
        <div>Airline: </div>
        <div><%= flight.airline %></div>
        <div>Airport: </div>
        <div><%= flight.airport %></div>
        <div>Flight Number: </div>
        <div><%= flight.flightNo %></div>
        <div> Departs: </div>
        <div><%= flight.departs %></div>
      </section>


      <div>Tickets:</div>
      <ul>
        <%- flights.tickets.map(p => 
          `<li>${p.seat} <small>${p.born.toLocaleDateString()}</small></li>`
        ).join('') %>
      </ul>
      <!-- end cast list -->
    </section>
        
    <!-- add to cast form below this comment -->
    <form id="add-per-to-ticket" action="???" method="POST">
      <select name="ticketId">
        <%- tickets.map(p => 
          `<option value="${p._id}">${p.seat}</option>`
        ).join('') %>
      </select>
      <button type="submit">Add Ticket</button>
    </form>

      <br><br>
      
      <h2>Destinations</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Destinations:</label>
  <textarea name="content"></textarea>
  <label>Airport:</label>
  <select name="airport">
    <option value="DEN">DEN</option>
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <label>Arrival Date:
  <input type="date" name="departs">
  </label>
  <input type="submit" value="Add Destination">
</form>

<p>Destinations = <%= flight.destinations.length %> </p>

<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Destinations</th>
          <th>Airport</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(f) { %>
          <tr>
            <td><%= f.departs %></td>
            <td><%= f.content %></td>
            <td><%= f.airport %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>


  <p>
    <a href = "/">Home Page</a>
    <a href = "/flights">Flight List</a>
</p>


</body>
</html>